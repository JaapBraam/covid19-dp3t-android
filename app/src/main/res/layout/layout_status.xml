<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/status_icon"
        android:layout_width="@dimen/icon_size_title"
        android:layout_height="@dimen/icon_size_title"
        android:layout_gravity="center"
        tools:src="@drawable/ic_green_check" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_medium"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/status_title"
            style="@style/NextStep.Text.Bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="2dp"
            tools:text="@string/bluetooth_setting_tracking_active" />

        <TextView
            android:id="@+id/status_text"
            style="@style/NextStep.Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="@string/bluetooth_setting_tracking_active_subtext" />

    </LinearLayout>

</LinearLayout>