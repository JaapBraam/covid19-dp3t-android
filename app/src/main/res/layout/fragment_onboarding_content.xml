<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/onboarding_title"
        style="@style/NextStep.Text.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingStart="@dimen/spacing_very_large"
        android:paddingEnd="@dimen/spacing_very_large"
        android:text="@string/onboarding_step_one_title"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/onboarding_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/onboarding_description"
        style="@style/NextStep.Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingStart="@dimen/spacing_very_large"
        android:paddingEnd="@dimen/spacing_very_large"
        android:paddingTop="@dimen/spacing_very_large"
        android:paddingBottom="@dimen/spacing_huge"
        android:text="@string/onboarding_step_one_message"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/onboarding_bg_illustration"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/onboarding_title" />

    <ImageView
        android:id="@+id/onboarding_bg_illustration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ill_grey_oval"
        android:alpha="0.3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/onboarding_description" />

    <ImageView
        android:id="@+id/onboarding_illustration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ill_on_boarding_1"
        app:layout_constraintBottom_toBottomOf="@+id/onboarding_bg_illustration"
        app:layout_constraintEnd_toEndOf="@+id/onboarding_bg_illustration"
        app:layout_constraintStart_toStartOf="@+id/onboarding_bg_illustration"
        app:layout_constraintTop_toTopOf="@+id/onboarding_bg_illustration" />

</androidx.constraintlayout.widget.ConstraintLayout>